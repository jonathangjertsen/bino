package main

import "github.com/jonathangjertsen/bino/ln"

templ DashboardPage(data *CommonData, dashboardData DashboardData) {
	@Layout(data) {
        <div class="dashboard">
            @Card() {
                <form action="/" method="POST">
                    <div class="form-group">
                        <label>{data.Ln(ln.CheckinPatientName)}</label>
                        <input class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label>{data.Ln(ln.GenericSpecies)}</label>
                        <select class="form-control" name="species">
                            for _, sp := range dashboardData.Species {
                                <option value={sp.SpeciesID}>{sp.Name}</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>{data.Ln(ln.GenericTags)}</label>
                        <br/>
                        for _, tag := range dashboardData.Tags {
                            <div class="form-check-inline checkbox" data-hidden={!tag.DefaultShow}>
                                <input type="checkbox" name="tag" id={tag.HTMLID()} value={tag.TagID}>
                                <label for={tag.HTMLID()}>
                                    {tag.Name}
                                </label>
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <label for="patient-home">{data.Ln(ln.HomesHomeName)}</label>
                        <select class="form-control" name="home">
                            for _, home := range dashboardData.Homes {
                                <option value={home.ID} selected?={home.ID == data.User.PreferredHomeID}>{home.Name}</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="form-check-inline">
                            <input type="checkbox" name="admitted" id="admitted" checked>
                            <label for="admitted">
                                {data.Ln(ln.CheckinIHaveThePatient)}
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" disabled?={data.User.PreferredHomeID == 0} class="b-create-patient btn btn-primary">{data.Ln(ln.CheckinCheckInPatient)}</button>
                    </div>

                    if data.User.PreferredHomeID == 0 {
                        <p class="small m-0">{data.Ln(ln.HomesCannotAddPatientBecauseUserIsHomeless)}</p>
                    }
                </form>
            }
        </div>
    }
}
