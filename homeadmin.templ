package main

import (
    "github.com/jonathangjertsen/bino/ln"
)

templ HomesPage(data *CommonData, homes []HomeView, homeless []UserView) {
    @Layout(data) {
        <h1>{data.Ln(ln.HomesViewHomes)}</h1>
        @Card() {
            // List of homes
            for _, home := range homes {
                @Card() {
                    <h2>{home.Name}</h2>
                    for _, user := range home.Users {
                        @user.Component(data) {
                            // Move user to different home
                            <form class="form-inline" action="/homes" method="POST">
                                <label>{data.Ln(ln.GenericMoveTo)}</label>
                                <select class="form-control-color r-2 select-user" name="home-id">
                                    for _, newHome := range homes {
                                        if home.ID != newHome.ID {
                                            <option value={newHome.ID}>{newHome.Name}</option>
                                        }
                                    }
                                    <option value="0">{data.Ln(ln.GenericNone)}</option>
                                </select>

                                <input type="hidden" name="form-id" value="add-user">
                                <input type="hidden" name="user-id" value={user.ID}>
                                <input type="hidden" name="curr-home-id" value={home.ID}>
                                <button type="submit" class="btn btn-primary mb-2">{data.Ln(ln.GenericMove)}</button>
                                <br/>
                                <label for="remove-from-current">{data.Ln(ln.HomesRemoveFromCurrent)}</label>
                                <input type="checkbox" name="remove-from-current" checked>
                            </form>
                        }
                    }
                    if len(home.Users) == 0 {
                        <p class="small">{data.Ln(ln.HomesEmptyHome)}</p>
                    }

                    // Add user to this home
                    if len(homeless) > 0 {
                        <form class="form-inline" action="/homes" method="POST">
                            <label>{data.Ln(ln.HomesAddToHome)}</label>
                            <select class="form-control-color r-2 select-user" name="user-id">
                                for _, user := range homeless {
                                    <option value={user.ID}>{user.DisplayName}</option>
                                }
                            </select>
                            <input type="hidden" name="form-id" value="add-user">
                            <input type="hidden" name="home-id" value={home.ID}>
                            <button type="submit" class="btn btn-primary mb-2">{data.Ln(ln.GenericAdd)}</button>
                        </form>
                    }

                    // Archive rehab home
                    <form class="form-inline" action="/homes" method="POST">
                        <input type="hidden" name="form-id" value="archive-home">
                        <button type="submit" class="btn btn-warning mb-2" name="home" value={home.ID}>{data.Ln(ln.HomeArchiveHome)}</button>
                    </form>
                }
            }
        }

        // Create home-form
        @Card() {
            <h2>{data.Ln(ln.HomesCreateHome)}</h2>
            <p class="small">{data.Ln(ln.HomesCreateHomeNote)}</p>
            <form class="form-inline" action="/homes" method="POST">
                <label for="name">{data.Ln(ln.HomesHomeName)}</label>
                <input type="text" id="created-home" name="name">
                <button type="submit" class="btn btn-primary mb-2">{data.Ln(ln.GenericAdd)}</button>
                <input type="hidden" name="form-id" value="create-home">
            </form>
        }

        // Unassigned users
        if len(homeless) > 0 {
            @Card() {
                <h2>{data.Ln(ln.AdminUnassignedUsers)}</h2>
                for _, user := range homeless {
                    @user.Component(data) {
                        <form class="form-inline" action="/homes" method="POST">
                            <label>{data.Ln(ln.HomesAddToHome)}</label>
                            <select class="form-control-color r-2 select-user" name="home-id">
                                for _, home := range homes {
                                    <option value={home.ID}>{home.Name}</option>
                                }
                            </select>
                            <input type="hidden" name="form-id" value="add-user">
                            <input type="hidden" name="user-id" value={user.ID}>
                            <button type="submit" class="btn btn-primary mb-2">{data.Ln(ln.GenericAdd)}</button>
                        </form>
                    }
                }
            }
        }
    }
}

templ (u *UserView) Component(data *CommonData) {
    @Card() {
        <table class="table tbl">
            <thead>
                <tr>
                    <th colspan="100%" class="text-center">
                        {u.DisplayName}
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>{data.Ln(ln.AdminEmailAddress)}</th>
                    <td>{u.Email}</td>
                </tr>
            </tbody>
        </table>
        { children... }
    }
}